<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exemplo3.Main"
             Title="Exemplo 3"
             >

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="Barra" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="StartAndExpand">
                <Label Text="Valores Iniciais" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" />
                <Label x:Name="primeiroInicial" Text="primeiroInicial" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" />
                <Label x:Name="segundoInicial" Text="segundoInicial" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" />
            </StackLayout>
            <StackLayout VerticalOptions="End">
                <Label Text="Valores Atualizados" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" />
                <Label x:Name="primeiroIncrementa" Text="{Binding primeiro}" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" />
                <Label x:Name="segundoDecrementa" Text="{Binding segundo}" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>